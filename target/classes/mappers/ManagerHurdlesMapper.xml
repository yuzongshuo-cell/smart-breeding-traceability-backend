<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.product_source.dao.ManagerHurdlesMapper">
    <!--基础查询结果集-->
    <resultMap id="BaseResultMap" type="managerHurdles">
        <id property="hId" column="h_id"/>
        <result property="hName" column="h_name"/>
        <result property="hDesc" column="h_desc"/>
        <result property="hMax" column="h_max"/>
        <result property="hSaved" column="h_saved"/>
        <result property="hTime" column="h_time"/>
        <result property="hEnable" column="h_enable"/>
        <result property="hFull" column="h_full"/>
        <result property="hFenceId" column="h_fence_id"/>
    </resultMap>

    <!--基础sql字段-->
    <sql id="Base_Column_List">
        h_id
        , h_name, h_desc, h_max, h_saved,
        h_time, h_enable, h_full, h_fence_id
    </sql>
    <select id="countByFhId" resultType="int">
        select count(*)
        from manager_hurdles
        where h_fence_id = #{fhId}
    </select>
    <select id="queryAllHurdles" resultMap="BaseResultMap">
        select
        h_id,
        h_name,
        h_desc,
        h_fence_id
        from manager_hurdles
        <where>
            <if test="hName != null and hName != ''">
                and h_name like concat('%', #{hName}, '%')
            </if>
            <if test="fhId != null and fhId != ''">
                and h_fence_id = #{fhId}
            </if>
        </where>
    </select>
    <select id="selectByPrimaryKey" resultMap="BaseResultMap">
        select *
        from manager_hurdles
        where h_id = #{hId}
    </select>
    <select id="selectByNameAndFence" resultMap="BaseResultMap">
        select *
        from manager_hurdles
        where h_name = #{hName}
          and h_fence_id = #{fhId}
    </select>
    <insert id="insert">
        insert into manager_hurdles
            (h_id, h_name, h_desc, h_fence_id)
        values
            (#{hId}, #{hName}, #{hDesc}, #{hFenceId})
    </insert>
    <update id="updateByPrimaryKey">
        update manager_hurdles
        set
            h_name = #{hName},
            h_desc = #{hDesc}
        where h_id = #{hId}
    </update>

    <select id="selectAllMax" resultType="int">
        select distinct h_max
        from manager_hurdles
    </select>

    <!-- 根据ID删除栏圈 -->
    <delete id="deleteByPrimaryKey">
        delete from manager_hurdles
        where h_id = #{hId}
    </delete>
    <update id="updateEnableById">
        update manager_hurdles
        set h_enable = #{hEnable}
        where h_id = #{hId}
    </update>



</mapper>